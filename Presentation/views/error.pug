extends _layout.pug

block styles
  link(rel='stylesheet' type='text/css' href='../css/landing.css')
  link(rel='stylesheet' type='text/css' href='../css/error.css')

block content
  section.hero.is-light.is-fullheight
    .hero-head
      include ./includes/navbar.pug
    .hero-body
      .container
        section#error-message
          h1.title.has-text-centered.is-size-1 #{subtitle}
          .level
            h1.level-item.subtitle.has-text-centered #{message}
          if eventId
            .level.script-enabled.cloak
              .level-item
                button#btn-feedback.button.is-info Report Feedback
        noscript
          .level
            .level-item
              div#feedback-form.box
                div
                  p.is-size-4.has-text-gray.has-text-centered It looks like we're having some internal issues.
                  p.is-size-6.has-text-grey-light.has-text-centered Our team has been notified. If you'd like to help, tell us what happened below.
                form.form(action="/feedback" method="POST")
                  input(readonly class="is-hidden" name="eventId" type="hidden" value=(eventId))
                  .field
                    label.label Name
                      .control
                        input.input.is-medium(maxlength="100" name="name" type="text" placeholder="Mary Mack")
                  .field
                    label.label Email
                      .control
                        input.input.is-medium(maxlength="100" name="email" type="email" placeholder="mary@example.com")
                  .field
                    label.label What Happened?
                      textarea.textarea.is-medium(maxlength="500" name="comments" placeholder="I clicked on 'X' and then hit 'Confirm'")
                  button.button.is-info.is-pulled-right(type="submit") Submit
          if eventId
            .level
              .level-item
                  a(href="#here")#btn-feedback.button.is-info Report Feedback

